=form_for [:admin, @workshop], :html => {:class => 'form-horizontal'} do |f|
  %legend
    .pull-right
      %button.btn.btn-primary{:type => 'submit'}
        Save Changes
      = link_to 'Cance', admin_workshops_path, :class => 'btn'
    Edit Workshop

    .fieldset
      .control-group
        = f.label :name, :class => 'control-label'
        .controls
          =f.text_field :name
      .control-group
        = f.label :presented_at, :class => 'control-label'
        .controls
          =f.text_field :presented_at
      .control-group
        = f.label :abstract, :class => 'control-label'
        .controls
          = f.text_area :abstract, :rows => 5