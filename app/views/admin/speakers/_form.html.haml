= form_for [:admin, @speaker], :html => {:class => 'form-horizontal'} do |f|
  %legend
    .pull-right
      %button.btn.btn-primary{:type => 'submit'}
        Save Changes
      - unless @speaker.new_record?
        = link_to 'Cancel', admin_speaker_path(@speaker), :class => 'btn'
      - else
        = link_to 'Cancel', admin_speakers_path, :class => 'btn'
    Edit Speaker

  .fieldset
    .control-group
      =f.label :first_name, :class => 'control-label'
      .controls
        =f.text_field :first_name
      =f.label :last_name, :class => 'control-label'
      .controls
        =f.text_field :last_name
    .control-group
      =f.label :twitter_handle, :class => 'control-label'
      .controls
        =f.text_field :twitter_handle
    .control-group
      =f.label :bio, :class => 'control-label'
      .controls
        =f.text_area :bio, :rows => 4
    .control-group
      =f.label :photo, :class => 'control-label'
      .controls
        =f.file_field :photo