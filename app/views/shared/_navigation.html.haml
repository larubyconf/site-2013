.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .container.nav-collapse
        %ul.nav.custom
          %li.divider
            = link_to raw("<i class='icon-home icon-white'></i>Home"), root_path
          %li
            = link_to "Speakers", speakers_path 
          %li
            = link_to "Schedule", schedule_path
          %li.divider 
            = link_to "Workshops", workshops_path
          %li.divider
            = link_to "Sponsors", sponsors_path
          %li
            = link_to "Venue", venue_path
          %li.divider
            = link_to "Travel", travel_path
          %li
            = link_to "Call for Proposals", proposals_path
          %li
            = link_to "Videos from the Past", "/main/videos"
        %ul.nav.custom.pull-right
          -if current_user && current_user.admin?
            %li.divider
              =link_to 'Admin', admin_path
          -if current_user
            %li
              =link_to current_user.email, my_account_path
            %li
              =link_to 'Sign Out', destroy_user_session_path, :method => 'delete'
          -else
            %li
              =link_to 'Sign in', new_user_session_path
            %li
              =link_to 'Register', new_user_registration_path
