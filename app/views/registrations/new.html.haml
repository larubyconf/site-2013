= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'horizontal-form'}) do |f|
  .row
  .span6
    .well
      %legend
        %button.btn.btn-primary.pull-right{:type => 'submit'}
          Register
        Registration

        = devise_error_messages!
        .fieldset
          .control-group
            =f.label :email, :class => 'control-label'
            .controls
              =f.email_field :email
          -if @user.password_required?
            .control-group
              =f.label :password
              .controls
                =f.password_field :password
            .control-group
              =f.label :password_confirmation
              .controls
                =f.password_field :password_confirmation
          =render :partial => 'devise/shared/links'

    &nbsp;
  .span6
    .well
